<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".Fragment.FragmentRuangan.RuanganFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="160dp"
        android:layout_height="190dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="4dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gambarRuangan"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/cardview_dark_background"
                android:importantForAccessibility="no"
                android:importantForAutofill="yes"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/titleRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:text="Gedung Auditorium G.2"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kapasitasRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins"
                android:text="0 - 0 Orang"
                android:textSize="13sp"
                app:drawableLeftCompat="@drawable/group_of_people" />

            <TextView
                android:id="@+id/ukuranRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:text="0 x 0 m"
                android:textSize="13sp"
                app:drawableLeftCompat="@drawable/size_of_a_room" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>