<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Fragment.FragmentRuangan.RuanganFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2">



    <androidx.cardview.widget.CardView
        android:layout_width="230dp"
        android:layout_height="250dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gambarRuangan"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/cardview_dark_background"
                android:importantForAccessibility="no"
                android:importantForAutofill="yes"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/titleRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:text="Gedung Auditorium G2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kapasitasRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="8dp"
                android:text="0 - 0 Orang"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/group_of_people" />

            <TextView
                android:id="@+id/ukuranRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:drawablePadding="10dp"
                android:text="0 x 0 m"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/size_of_a_room" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    </GridLayout>

</LinearLayout>